<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp" >
    
    <ImageView 
        android:id="@+id/listItemThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:layout_marginRight="10dp"
        android:contentDescription="Video Thumb" />
    
        <ImageView 
        android:id="@+id/PlayView"
        android:src="@drawable/av_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:visibility="gone" />
        
    <TextView 
       android:id="@+id/listItemName"
       android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    android:layout_toRightOf="@id/listItemThumb"
        android:hint="List Item Name" />
    
 <TextView 
       android:id="@+id/listItemCount_Duration"
       android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    android:layout_toRightOf="@id/listItemThumb"
    android:layout_below="@id/listItemName"
        android:hint="List Item Count_Duration" />
    

</RelativeLayout>
